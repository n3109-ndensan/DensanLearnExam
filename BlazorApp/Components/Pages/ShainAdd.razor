@page "/shain-add"
@implements IDisposable
@rendermode InteractiveServer
@inject IStateBox<List<ShainInfo>> sessionState
@inject NavigationManager NavigationManager

<PageTitle>社員登録</PageTitle>

<h1>社員登録</h1>

<div class="main">
    <EditForm EditContext=editContext OnValidSubmit=PlaceShain>
        <div>
            <ShainEditor EditShainInfo="editShain" />
        </div>

        <RadzenButton Text="登録" ButtonType="ButtonType.Submit" class="btn btn-primary" Disabled="@isError"></RadzenButton>
        <RadzenButton Text="キャンセル" Click="Cancel" class="btn btn-primary"></RadzenButton>

        <DataAnnotationsValidator />
    </EditForm>
</div>
